# Replit Environment Variables Template
# Copy these to your Replit Secrets tab

# === REQUIRED FOR BASIC FUNCTIONALITY ===

# Database (use Neon, Supabase, or Railway)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Authentication (generate a long random string)
NEXTAUTH_SECRET="your-super-long-random-secret-key-here-minimum-32-characters"
NEXTAUTH_URL="https://your-repl-name.username.repl.co"

# === OPTIONAL BUT RECOMMENDED ===

# Redis Cache (use Upstash Redis)
REDIS_URL="redis://:password@host:port"

# Email Service (use Resend)
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="HireOverseas"
SMTP_HOST="smtp.resend.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="resend"
SMTP_PASSWORD="your-resend-api-key"

# File Storage (use Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Payments (Stripe Test Mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# === OPTIONAL FEATURES ===

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Error Tracking
SENTRY_DSN="https://your-dsn@sentry.io/project-id"

# AI Features
OPENAI_API_KEY="sk-..."

# Admin Features
JWT_SECRET="another-random-secret-key"
ADMIN_EMAIL="admin@yourdomain.com"